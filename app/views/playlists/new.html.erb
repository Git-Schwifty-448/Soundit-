<div class="row">
    <div class="col s10 offset-s1 content_card z-depth-1">

        <div class="content_title">
            Create New Playlist
        </div>

		<%= form_with scope: :playlist, url: playlists_path, local: true do |form| %>
			<p>
				<%= form.label :name %><br>
				<%= form.text_field :name %>
			</p>

		    <%= form.submit class: "btn btn-primary" %>
		<% end %>
	</div>
</div>
