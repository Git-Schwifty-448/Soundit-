
<% for micropost in @feed do%>
    <li id="micropost-<%= micropost.id %>">
        <div class="row">

            <div class="col s10">
                <span class="_title"><%= micropost.title %></span> <div class="chip"><%= micropost.genre %></div><br>
                <span class="_details">Posted <%= time_ago_in_words(micropost.created_at) %> ago by <%= link_to micropost.user.name, micropost.user %></span>
            </div>

            <div class="col s2">
                Upvote<br>
                <%= micropost.score.to_i %><br>
                Downvoat
            </div>
        </div>

    </li>
<% end %>
