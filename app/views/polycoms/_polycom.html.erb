<div class="row row_med_margin content_card z-depth-1">
        <div class="col" style="max-width: 30px">

            <div class="_score_collector">
                <% if logged_in? %>
                    <% if current_user.voted_up_on? polycom %>
                        <span class="_upvoted"> <%= link_to "△", polycom_like_path(polycom), method: :put %></span><br>
                    <% else %>
                        <span class="_nonvoted"> <%= link_to "△", polycom_like_path(polycom), method: :put %></span> <br>
                    <% end %>
                <% else %>
                    <span class="_nonvoted"> <%= link_to "△", polycom_like_path(polycom), method: :put %></span> <br>
                <% end %>

                <span class="_score"><%= polycom.get_upvotes.size - polycom.get_downvotes.size %></span><br>

                <% if logged_in? %>
                    <% if current_user.voted_down_on? polycom %>
                        <span class="_downvoted"> <%= link_to "▽", polycom_dislike_path(polycom), method: :put %> </span>
                    <% else %>
                        <span class="_nonvoted"> <%= link_to "▽", polycom_dislike_path(polycom), method: :put %></span>
                    <% end %>
                <% else %>
                    <span class="_nonvoted"> <%= link_to "▽", polycom_dislike_path(polycom), method: :put %></span>
                <% end %>
            </div>
        </div>
    <div class="col l10 s11">
        <span class="_details_top_reply">Posted by <%= link_to User.find(polycom.user_id).name, user_path(polycom.user_id) %> <%= time_ago_in_words(polycom.created_at) %> ago.</span><br>
        <span class="_artist_title"><%= polycom.body %></span>
        <br>
        <br>
            <% if polycom.polycoms.length != 0 %>
                <%= render polycom.polycoms %>
            <% end %>
        <br>
        <span class="_details_reply">Reply</span>


            <div class="row reply_card">
                <div class="col s8 ">
                    <%= render partial: "polycoms/form", locals: {commentable: polycom} %>
                </div>
            </div>


    </div>

</div>