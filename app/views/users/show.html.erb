<% provide(:title, @user.name) %>
  <div class="row">
    <div class="col s10 offset-s1 content_card z-depth-1">
        <div class="content_title">
            <%= @user.name %>
        </div>

        <div class="content_body">

            <% if @user.microposts.any? %>
                <div class="content_header">
                    Posts (<%= @user.microposts.count %>)
                </div>
                <ul class="microposts">
                    <%= render @microposts %>
                </ul>
                <%= will_paginate @microposts %>
            <% end %>

			<% if @user.playlists.any? %>
                <div class="content_header">
                    Playlists (<%= @user.playlists.count %>)
                </div>
                <ul class="playlist">
                    <%= render @playlists %>
                </ul>
                <%= will_paginate @playlists %>
            <% end %>
        </div>

        <% for com in @user_community %>


        <%= com.title %>

        <% end %>
    </div>
</div>
