



    <% if logged_in? %>

        <div class="row row_margin">
            <div class="col s2 offset-s1 content_card z-depth-1">
                <div class="content_header_narrow">
                    Communities
                </div>
                Communities <br><br><br><br><br><br><br><br><br>
            </div>

            <div class="col s8">
                <div class="row">
                    <div class="col s9 content_card z-depth-1">

                        <div class="content_header_narrow">
                            What's Hot?
                        </div>
                        What's Hot<br><br><br><br>
                    </div>
                    <div class="col s3 content_card z-depth-1">
                        <div class="content_header_narrow">
                            My Posts (<%= current_user.microposts.count %>)
                        </div>
                        
                        <% if current_user.microposts.any? %>
                            <ol class="microposts">
                                <%= render @microposts %>
                            </ol>
                            <%= will_paginate @microposts %>
                        <% else %>
                            No posts.<br>
                            Post something!
                        <% end %>


                </div>
            </div>
            <div class="row">
                <div class="col s12 content_card z-depth-1">
                    <div class="content_header_narrow">
                        Community Feature
                    </div>
                    Community Feature<br><br><br><br>
                    </div>
                </div>
            </div>
        </div>



    <% else %>
        <div class="row row_margin">

        <div class="col s10 offset-s1">
        <div class="content_card z-depth-1">

            <div class="content_header">
                StaticPages#Home
            </div>

            <div class="content_body">
                Find me in app/views/static_pages/home.html.erb<br><br>
            
                More Content
            </div>
        </div>
    </div>
    </div>

    <% end %>




