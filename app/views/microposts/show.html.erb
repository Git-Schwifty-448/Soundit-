<% provide(:title, @micropost.title) %>

<div class="row">
    <div class="col s2 content_card z-depth-1">
        <div class="content_header_narrow">
            Communities
        </div>
        Community information and other content will go here.
        <br><br>Eventually this will need to be rendered in a shared form
        <br>
        <br><br><br><br><br><br><br><br><br><br><br><br><br>
        <br><br><br><br><br><br>
    </div>

    <div class="col s10">
        <div class="row">

            <div class="col s12">
                <%# Title %>
                
                <div class="content_title_post">
                    <%= @micropost.title %> (<%= @micropost.artist %>)
                </div>

                <%# Post Information %>
                <div class="row row_smal_margin content_card z-depth-1">
                    <div class="col" style="max-width: 30px">

                        <div class="_score_collector">
                            <% if logged_in? %>
                                <% if current_user.voted_up_on? @micropost %>
                                    <span class="_upvoted"> <%= link_to "△", micropost_like_path(@micropost), method: :put %></span><br>
                                <% else %>
                                    <span class="_nonvoted"> <%= link_to "△", micropost_like_path(@micropost), method: :put %></span> <br>
                                <% end %>
                            <% else %>
                                <span class="_nonvoted"> <%= link_to "△", micropost_like_path(@micropost), method: :put %></span> <br>
                            <% end %>

                            <span class="_score"><%= @micropost.get_upvotes.size - @micropost.get_downvotes.size %></span><br>

                            <% if logged_in? %>
                                <% if current_user.voted_down_on? @micropost %>
                                    <span class="_downvoted"> <%= link_to "▽", micropost_dislike_path(@micropost), method: :put %> </span>
                                <% else %>
                                    <span class="_nonvoted"> <%= link_to "▽", micropost_dislike_path(@micropost), method: :put %></span>
                                <% end %>
                            <% else %>
                                <span class="_nonvoted"> <%= link_to "▽", micropost_dislike_path(@micropost), method: :put %></span>
                            <% end %>
                        </div>
                    </div>
                    <div class="col s9">
                        <span class="_details_top"></span><br><br>
                        <span class="_artist_title">Labeled under [<%= @micropost.genre %>]</span>
                        <br><span class="_details">Comments (<%= @micropost.comments.count %>)
                        <% if current_user?(@micropost.user) %> |
                                <%= link_to "Delete Post", @micropost, method: :delete, data: { confirm: "Delete this post?"}%>
                            <% end %>
                        | Posted <%= time_ago_in_words(@micropost.created_at) %> ago by <%= link_to @micropost.user.name, @micropost.user %></span>
                    </div>
                    <div class="col">
                        <div class="add_to_list">
                            <!-- Dropdown Trigger -->
                            <a class='dropdown-button chip z-depth-2' href='#' data-activates='dropdown1'>Add to Playlist</a>

                            <!-- Dropdown Structure -->
                            <ul id='dropdown1' class='dropdown-content'>
                                <% Playlist.all.each do |playlist| %>
                                    <li><%= link_to playlist.name, playlist_addpost_path(playlist.id, @micropost.id), method: :put %></li>
                                <% end %>
                            </ul>
                        </div>
                    </div>

                </div>

                <br>

                <%# Rendering of Video %>
                <span class="_title"> Watch</span>
                <div class="row dark_card z-depth-2">
                    <div class="col s12">
                        <center><iframe width="560" height="315" src="<%= @embed_url %>" style="border: 0px;"></iframe></center>
                    </div>
                </div>

                <%# Comment Box %>
                <% if logged_in? %>
                    <span class="_title"> Add a Comment</span>    
                    <div class="row reply_card">
                        <div class="col s8 ">
                            <%= form_with(model: [ @micropost_copy, @micropost_copy.comments.build ]) do |form| %>
                                <%= form.hidden_field :user_id, value: current_user.id %>
                                <%= form.text_area :body, placeholder: "Replying as " + current_user.name, class: "content_card z-depth-2", style: "border: 0px;" %><br>
                                <%= form.submit :Comment, class: "btn blue-grey z-depth-2" %>
                            <% end %>
                        </div>
                    </div>
                <% else %>

                    <div class="row">
                        <div class="col s8">
                            Please log in to post a reply.
                        </div>
                    </div>

                <% end %>

                <%# comments section%>
                <div class="row">
                    <div class="col s12">
                        <span class="_title"> Replies</span>

                        <% @micropost.comments.each do |comment| %>

                            <div class="row row_med_margin content_card z-depth-1">
                                <div class="col" style="max-width: 30px">

                                    <div class="_score_collector">
                                        <% if logged_in? %>
                                            <% if current_user.voted_up_on? comment %>
                                                <span class="_upvoted"> <%= link_to "△", comment_like_path(comment), method: :put %></span><br>
                                            <% else %>
                                                <span class="_nonvoted"> <%= link_to "△", comment_like_path(comment), method: :put %></span> <br>
                                            <% end %>
                                        <% else %>
                                            <span class="_nonvoted"> <%= link_to "△", comment_like_path(comment), method: :put %></span> <br>
                                        <% end %>

                                        <span class="_score"><%= comment.get_upvotes.size - comment.get_downvotes.size %></span><br>

                                        <% if logged_in? %>
                                            <% if current_user.voted_down_on? comment %>
                                                <span class="_downvoted"> <%= link_to "▽", comment_dislike_path(comment), method: :put %> </span>
                                            <% else %>
                                                <span class="_nonvoted"> <%= link_to "▽", comment_dislike_path(comment), method: :put %></span>
                                            <% end %>
                                        <% else %>
                                            <span class="_nonvoted"> <%= link_to "▽", comment_dislike_path(comment), method: :put %></span>
                                        <% end %>
                                    </div>
                                </div>
                                <div class="col s10">
                                    <span class="_details_top_reply">Posted by <%= comment.user_id %> <%= time_ago_in_words(comment.created_at) %> ago.</span><br>
                                    <span class="_artist_title"><%= comment.body %></span>
                                    <br>
                                    <span class="_details_reply">Reply</span>
                                </div>

                            </div>

                        <% end %>

                    </div>
                </div>

            </div>
        </div>
        
    </div>

</div>