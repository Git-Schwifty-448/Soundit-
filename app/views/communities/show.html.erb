<% provide(:title, @community.title) %>
<div class="row">
    <div class="col l10 offset-l1  m12 s12  ">
        <div class="row">
                <div class="col s12">
                <div class="content_title">
                    <i class="material-icons" style="font-size: 35px">graphic_eq</i>Top Tracks
                </div>
                <div class="row">
                    <div class="col m12 s12">
                        <div class="row">
                            <div class="col l8 m12 s12"> 
                                <span class="_title"><%= @community.title %></span>

                                <div class="row">
                                    <div class="col s12 content_card z-depth-1" style="padding-left: 2px; padding-right: 2px;">
                                        <table class="bordered highlight">
                                            <ul class="feed_listing" style="list-style: none;">
                                                <%= render @feed %>
                                                <%= will_paginate @feed %>

                                                <% if @feed.length == 0%>
                                                    There doesn't seem to be any songs here...
                                                <% end %>
                                            </ul>
                                        </table>
                                        <div class="right">
                                            <%= will_paginate @feed %>
                                        </div>
                                        <br>
                                    </div>
                                </div>
                            </div>

                            <div class="col l4 m12 s12"> 
                                <span class="_title"> Community Details</span>

                                <div class="row">
                                    <div class="col s12 content_card z-depth-1" >
                                       

                                        <% if logged_in? %>
                                            <% if current_user.voted_up_on? @community %>
                                                <span class="_upvoted_com"> <%= link_to "Currently in my list", community_like_path(@community), method: :put %></span>
                                                <span class="_nonvoted_com"> <%= link_to " | Remove?", community_dislike_path(@community), method: :put %></span>
                                            <% else %>
                                                <span class="_nonvoted_com"> <%= link_to "Add to my list", community_like_path(@community), method: :put %></span>
                                            <% end %>
                                        <% else %>
                                            <span class="_nonvoted_com"> <%= link_to "Login to add to your list", login_path %></span>
                                        <% end %>
                                        <br>
                                        Created: <%= time_ago_in_words(@community.created_at) %> ago
                                        <br>
                                        Description: <%= @community.description %>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>
</div>