

<li id="micropost-<%= micropost.id %>" class="hide-on-small-only show-on-medium-and-up">

    <div class="row">
        <div class="col s1">
            <div style="float: right;">

                <%= link_to "↑", like_micropost_path(micropost), method: :put %> <br>
                <%= micropost.get_upvotes.size - micropost.get_downvotes.size %><br>
                <%= link_to "↓", dislike_micropost_path(micropost), method: :put %>
            </div>
        </div>
        <div class="col s11">
            <span class="_title"><%= link_to micropost.title, micropost %></span> <div class="chip"><%= micropost.genre %></div><br>
            <span class="_details">Comments (<%= micropost.comments.count %>) | Posted <%= time_ago_in_words(micropost.created_at) %> ago by <%= link_to micropost.user.name, micropost.user %></span>
        </div>
    </div>




<li id="micropost-<%= micropost.id %>" class="show-on-small hide-on-med-and-up">
    <div class="row content_card_mobile z-depth-1">
            <div class="col s1">
                <div style="font-size: 20px; float: right;">

                    <%= link_to "↑", like_micropost_path(micropost), method: :put %> <br>
                    <%= micropost.get_upvotes.size - micropost.get_downvotes.size %><br>
                    <%= link_to "↓", dislike_micropost_path(micropost), method: :put %>
                </div>
            </div>
            <div class="col s11">
                <span class="_title_mobile"><%= link_to micropost.title, micropost %></span> <div class="chip"><%= micropost.genre %></div><br>
                <span class="_details_mobile">Comments (<%= micropost.comments.count %>) | Posted <%= time_ago_in_words(micropost.created_at) %> ago by <%= link_to micropost.user.name, micropost.user %></span>
            </div>

    </div>
</li>